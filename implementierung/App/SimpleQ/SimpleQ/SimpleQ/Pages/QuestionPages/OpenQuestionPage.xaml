<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ext="clr-namespace:SimpleQ.Extensions"
             x:Class="SimpleQ.Pages.QuestionPages.OpenQuestionPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Question.CatName, Mode=TwoWay}" Style="{DynamicResource CaptionStyle}" Margin="10,10,10,0"></Label>
            <Label Text="{Binding Question.SurveyDesc, Mode=TwoWay}" Margin="10,5,10,0" FontAttributes="Bold"></Label>

            <Entry Placeholder="{ext:Translate Text=Answer}" Text="{Binding Answer}" BindingContext="{Binding}" Margin="10,0,10,0">
                <Entry.Behaviors>
                    <ext:OneWordBehavior x:Name="OneWordBehavior"></ext:OneWordBehavior>
                </Entry.Behaviors>
            </Entry>
            <Button Text="{ext:Translate Text=SendAnswer}" Command="{Binding SendAnswerCommand}" HorizontalOptions="FillAndExpand" IsEnabled="{Binding Source={x:Reference OneWordBehavior}, Path=IsValid}" Margin="10,0,10,0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>