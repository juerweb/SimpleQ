<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:SimpleQ.Extensions"
             x:Class="SimpleQ.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="logoImage"></Image>
            <Frame BorderColor="Black">
                <StackLayout>
                    <Label Text="{resx:Translate Text=RegisterScanHelpText}"></Label>
                    <Button Command="SimpleQ.PageModels.Commands.ScanQRCodeCommand" Text="{resx:Translate Text=StartScan}"></Button>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>