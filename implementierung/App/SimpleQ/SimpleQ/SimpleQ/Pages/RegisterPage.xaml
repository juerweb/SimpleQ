<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:SimpleQ.Extensions"
             xmlns:controls="clr-namespace:IntelliAbb.Xamarin.Controls;assembly=IntelliAbb.Xamarin.Controls"
             x:Class="SimpleQ.Pages.RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="logoImage" Margin="0,30,0,0"></Image>
            <Frame BorderColor="{StaticResource colorBorder}">
                <StackLayout>
                    <Label Text="{resx:Translate Text=RegisterScanHelpText}" HorizontalTextAlignment="Center"></Label>
                    <Button Command="{Binding OpenScannerCommand}" Text="{resx:Translate Text=StartScan}"></Button>
                </StackLayout>
            </Frame>
            <Frame BorderColor="{StaticResource colorBorder}">
                <StackLayout>
                    <Label Text="{resx:Translate Text=ManuelCodeEntry}" HorizontalTextAlignment="Center"></Label>
                    <Entry Placeholder="{resx:Translate Text=RegisterCode}" Text="{Binding Path=RegisterCode, StringFormat='{}{0:#}'}">
                        <Entry.Behaviors>
                            <resx:SixDigitCodeBehavior x:Name="SixDigitCodeBehavior"></resx:SixDigitCodeBehavior>
                        </Entry.Behaviors>
                    </Entry>
                    <StackLayout Orientation="Horizontal">
                        <controls:Checkbox VerticalOptions="Center" IsChecked="{Binding DebugMode}"></controls:Checkbox>
                        <Label Text="{resx:Translate Text=DebugMode}"></Label>
                    </StackLayout>

                    <Button Command="{Binding ManualCodeEntryCommand}" CommandParameter="{Binding}" Text="{resx:Translate Text=Register}" IsEnabled="{Binding Source={x:Reference SixDigitCodeBehavior}, Path=IsValid}"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>