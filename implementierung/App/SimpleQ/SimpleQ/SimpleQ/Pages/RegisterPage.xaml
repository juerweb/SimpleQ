<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:SimpleQ.Extensions"
             x:Class="SimpleQ.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="logoImage"></Image>
            <Frame BorderColor="{StaticResource colorBorder}">
                <StackLayout>
                    <Label Text="{resx:Translate Text=RegisterScanHelpText}" HorizontalTextAlignment="Center"></Label>
                    <Button Command="{Binding ScanCommand}" CommandParameter="{Binding}" Text="{resx:Translate Text=StartScan}"></Button>
                </StackLayout>
            </Frame>
            <Frame BorderColor="{StaticResource colorBorder}">
                <StackLayout>
                    <Label Text="{resx:Translate Text=ManuelCodeEntry}" HorizontalTextAlignment="Center"></Label>
                    <Entry Placeholder="{resx:Translate Text=SixDigitCode}" x:Name="sixDigitCodeEntry"></Entry>
                    <Button Command="{Binding ManualCommand}" CommandParameter="{Binding}" Text="{resx:Translate Text=Register}"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>