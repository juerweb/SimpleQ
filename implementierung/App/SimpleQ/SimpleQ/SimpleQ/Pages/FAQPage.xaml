<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ext="clr-namespace:SimpleQ.Extensions"
             x:Class="SimpleQ.Pages.FAQPage"
             Title="{ext:Translate Text=FAQ}">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding FAQs}" SeparatorVisibility="None" HasUnevenRows="False" SelectedItem="{Binding SelectedFAQ, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="15,10" HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding Question}" Style="{DynamicResource BodyStyle}" VerticalOptions="Center" FontAttributes="Bold"></Label>
                                <Label Text="{Binding Answer}" IsVisible="{Binding IsActive}" Style="{DynamicResource BodyStyle}" VerticalOptions="Center"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>