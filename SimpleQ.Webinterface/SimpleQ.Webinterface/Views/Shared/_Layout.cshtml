<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="@Url.Content("~/Scripts/Chart.js")"></script>

    <script>

        $(document).ready(function () {
            showSurveyCreationWindow();
        });

        function hideAllSubWindows() {
            $("#surveyCreationWindow").hide();
            $("#surveyResultsWindow").hide();
            $("#groupAdministrationWindow").hide();
            $("#settingsWindow").hide();
            $("#supportWindow").hide();
        }

        function showSurveyCreationWindow() {
            hideAllSubWindows();
            $("#surveyCreationWindow").show();
        }
        function showSurveyResultsWindow() {
            hideAllSubWindows();
            $("#surveyResultsWindow").show();
        }
        function showGroupAdministrationWindow() {
            hideAllSubWindows();
            $("#groupAdministrationWindow").show();
        }
        function showSettingsWindow() {
            hideAllSubWindows();
            $("#settingsWindow").show();
        }
        function showSupportWindow() {
            hideAllSubWindows();
            $("#supportWindow").show();
        }
    </script>
   

</head>
<body>
    <div class="row border-bottom border-dark m-0">
        <div class="col-md-6">
            <img src="../../Content/Images/Logos/simpleq.png" style="max-height: 100px;" class="img-fluid" />
        </div>
        <div class="col-md-6 d-flex justify-content-end align-items-center">
            <!--<a class="btn btn-light border border-danger align-self-center">Logout</a>-->
            <a class="btn btn-light border border-danger">
                <span class="row">
                    <span class="col-6">
                        Logout
                    </span>
                    <span class="col-4">
                        <img src="../../Content/Images/Icons/logout.png" class="img-fluid navbar-img" />
                    </span>
                </span>
            </a>
        </div>
    </div>
    <div class="row m-0">
        <div class="col-md-2 border-right border-dark p-0">
            <ul class="list-group">
                <li class="list-group-item p-0">
                    <a class="btn btn-light btn-block" onclick="showSurveyCreationWindow()">
                        <span class="row d-flex">
                            <span class="col-8 align-self-center p-0">
                                Umfrage erstellen
                            </span>
                            <span class="col-4">
                                <img src="../../Content/Images/Icons/createSurvey.png" class="img-fluid navbar-img" />
                            </span>
                        </span>
                    </a>
                </li>
                <li class="list-group-item p-0">
                    <a class="btn btn-light btn-block" onclick="showSurveyResultsWindow()">
                        <span class="row d-flex">
                            <span class="col-8 align-self-center p-0">
                                Umfrageauswertung
                            </span>
                            <span class="col-4">
                                <img src="../../Content/Images/Icons/surveyResults.png" class="img-fluid navbar-img" />
                            </span>
                        </span>
                    </a>
                </li>
                <li class="list-group-item p-0">
                    <a class="btn btn-light btn-block" onclick="showGroupAdministrationWindow()">
                        <span class="row d-flex">
                            <span class="col-8 align-self-center p-0">
                                Gruppenverwaltung
                            </span>
                            <span class="col-4">
                                <img src="../../Content/Images/Icons/groupAdministration.png" class="img-fluid navbar-img" />
                            </span>
                        </span>
                    </a>
                </li>
                <li class="list-group-item p-0">
                    <a class="btn btn-light btn-block" onclick="showSettingsWindow()">
                        <span class="row d-flex">
                            <span class="col-8 align-self-center p-0">
                                Einstellungen
                            </span>
                            <span class="col-4">
                                <img src="../../Content/Images/Icons/settings.png" class="img-fluid navbar-img" />
                            </span>
                        </span>
                    </a>
                </li>
                <li class="list-group-item p-0">
                    <a class="btn btn-light btn-block" onclick="showSupportWindow()">
                        <span class="row d-flex">
                            <span class="col-8 align-self-center p-0">
                                Support
                            </span>
                            <span class="col-4">
                                <img src="../../Content/Images/Icons/support.png" class="img-fluid navbar-img" />
                            </span>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-md-10">
            <div id="surveyCreationWindow">
                @Html.Partial("~/Views/SurveyCreation/_SurveyCreation.cshtml")
            </div>
            <div id="surveyResultsWindow">
                @Html.Partial("~/Views/SurveyResults/_SurveyResults.cshtml")
            </div>
            <div id="groupAdministrationWindow">
                @Html.Partial("~/Views/GroupAdministration/_GroupAdministration.cshtml")
            </div>
            <div id="settingsWindow">
                @Html.Partial("~/Views/Settings/_Settings.cshtml")
            </div>
            <div id="supportWindow">
                @Html.Partial("~/Views/Support/_Support.cshtml")
            </div>
        </div>
    </div>

    <script>
        var ctx = document.getElementById("chart1").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                datasets: [{
                    label: '# of Votes',
                    data: [113, 192, 333, 45, 112, 23],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        var ctx2 = document.getElementById("chart2").getContext('2d');
        var myChart2 = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });
    </script>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
